/* pages/goods/goodsList.wxss */
page {
  background: #F8F9FA;
}
.nav {
  position: fixed;
  top: 0;
  left: 0;  
  display: flex;
  width: 100%;
  justify-content: space-around;
  padding-bottom: 20rpx;
  background: #fff;
  z-index:99;
  border-bottom: 1rpx solid #F8F9FA ;
}
.navtab {
  padding: 10rpx 20rpx;
  font-size: 32rpx;
}
.active {
  border-bottom: 2px solid blue;
}
.on { 
  color: #0193DE;
  border-bottom: 5rpx solid #0193DE;
}
/* .swiper-box{ display: block; height: 100%; width: 100%;  } */
.orderList {
  margin-bottom: 20rpx;
} 
.orderHead {
  display: flex;
  line-height: 80rpx;
  justify-content: space-between;
  padding: 0rpx 24rpx;
  background: #fff;
}
.orderHead .time,.orderHead .orderStatus {
  font-size: 24rpx;
}
.orderHead .orderStatus {
  color: #FF802F;
}
.orderInfo {
  display: flex;
  padding: 30rpx;
  background: #fff;
}
.orderPic image{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
}
.orderDesc {
  flex: 1 1 100rpx;
  margin-left: 20rpx;
}
.goodsTitle {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 28rpx;
  color: #333;
}
.goodsStandard {
  font-size: 24rpx;
  color: #999;
}
.goodsPrice {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  text-align: right;
  background: #fff;
  font-size: 20rpx;
  border-bottom: 2rpx solid #F2F5F7;
}
.goodsPrice .price {
  color: #F31919;
  font-size: 24rpx; 
}
.goodsPrice .price text {
  font-size: 30rpx;
  margin-left: 10rpx;
}
.statusBtn {
  display: flex;
  justify-content: flex-end;
  padding: 14rpx 24rpx;
  background: #fff;
}
.statusBtn button {
  margin: 0;
  margin-right: 10rpx; 
  padding: 0;
  width: 140rpx;
  text-align: center;
  border-radius: 4rpx;
  background: #fff;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
}
.receive,.pay{
  border:1rpx solid #FF802F;
  color: #FF802F;
}
.del {
  border:1rpx solid #666;
  color: #666;
}
page{height:100%}
swiper{height:100%}