/* 退款类型选择 */
page {
  background: #F2F5F7;
}
.top {
  display: flex;
  padding: 0rpx 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-top: 1rpx solid #e7e7e7;
}
.tips {
  display: flex;
  align-items: center;
}
.tips text {
  margin-right: 10rpx; 
  font-size: 32rpx;
}
.tips image{
  width: 32rpx;
  height: 37rpx;
}
/* 退款金额 */
.refundMoney {
  padding: 24rpx 26rpx;
  background: #fff;
}
.refundMoney .tips {
  margin-right: 10rpx;
}
.refundMoney .money {
  color: #F31919;
  font-weight: bold;
}
.refundMoney .icon {
  font-size: 24rpx;
  margin-left: 20rpx;
}
.refundMoney .price {
  font-size: 30rpx;
}
/* 最多退 */
.most {
  padding: 20rpx 26rpx;
  background: #F2F5F7;
  font-size: 24rpx;
  color: #999;
}
/* 退款原因 */
.palceholder {
  margin-left: 22rpx;
  color: #ccc;
}
textarea {
  width: 100%;
  height: 100px;
  line-height: 24px;
}
/* 字数限制 */
.limt {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}
/* 上传 */
.upLoadPic {
  padding-top: 20rpx;
  background: #F2F5F7;
}
.upLoadTxt {
  padding: 24rpx 26rpx;
  background: #fff;
}
.upLoadBox {
  display: flex;
  padding: 32rpx 24rpx;
  background: #fff;
}
/* 遮罩弹层  */
.maskLayer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background: rgba(0,0,0,.2);
}
.choose {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 800rpx;
  z-index: 9999;
  background: #fff;
}
.type {
  padding: 30rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}
.radioList {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 24rpx; 
  padding-right: 24rpx;
  font-size: 32rpx;
  color: #333;
}
.radioList:first-child {
  border-bottom: 1rpx solid #ddd;
}
.close {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: linear-gradient(to right,#15AAFF,#0088F1);
  color: #fff;
  font-size: 34rpx;
}
/* 上传图片 */
.upLoadPic image {
  width: 150rpx;
  height:150rpx; 
}
.upLoad {
  position: relative;
  width: 150rpx;
  height:150rpx;
}
.upLoadPic .loading {
  width: 60rpx;
  height:60rpx;
}
.loadingBox {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  border: 1rpx solid #e7e7e7;
}
.imgBox {
  position: relative;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.imgBox .del {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 28rpx;
  height: 28rpx;
}
.del image {
  width: 28rpx;
  height: 28rpx;
  display: block;
}
/* 底部按钮 */
.submit {
  width: 100%;
  position: fixed;
  bottom:0;
  left: 0;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  background: linear-gradient(to right,#15AAFF,#0088F1);
  text-align: center;
  font-size: 36rpx;
}

