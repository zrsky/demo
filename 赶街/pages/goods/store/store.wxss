/* pages/goods/goodsList.wxss */
.banner {
  width:100%;
  position: relative;
}

.loading-top {
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  top:0;
  left:0;
  width:100%;
}

.loading-bottom {
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
}

.img-ganjie-loading {
  width:180rpx;
  height:100rpx;
}

.address {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  color:#fff; 
}

.banner-image {
  width:100%;
  min-height:294rpx;
  height:294rpx;
}

.store-shadow {
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:294rpx;
  z-index: 99;
  background-color:black;
  opacity: .4;
}

.store-info {
  position:absolute;
  top:100rpx;
  left:30rpx;
  width:90%;
  height:114rpx;
  display:flex;
  flex-direction: row;
  justify-content: flex-start;
  z-index: 99
}

.store-info image {
  width:114rpx;
  height:114rpx;
}

.store-info view {
  width:75%;
  margin-left:15rpx;
  display:flex;
  flex-direction: column;
}

.store-info view text{
  color:#fff;
  font-size:30rpx;
  height:57rpx;
  line-height: 57rpx;
}

.store-info view text:nth-child(2){
  font-size:24rpx;
}

.board-list {
   display: flex;
   flex-direction: column;
}

.board-item {
  display: flex;
  flex-direction: row;
  height:220rpx;
  margin:30rpx 0 0 0;
}

.board-item navigator{
  display:flex;
  flex-wrap:nowrap;
}

.board-image {
  width:220rpx;
  height:220rpx;
}

.board-image image {
  width:220rpx;
  height:220rpx;
}

.board-info {
  display:flex;
  flex:1;
  flex-direction: column;
  font-size:32rpx;
  margin-left:10rpx;
}

.board-info-name {
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    font-size: 32rpx;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
    height:40rpx;
    line-height:40rpx;
}

.board-info-sellPoint {
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    font-size: 26rpx;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
    height:40rpx;
    line-height: 40rpx;
    color:#959595;
}

 .board-info-sku-box {
    height:72rpx;
    line-height:56rpx;
}

.board-info-sku {
    border:1rpx solid #1D9DFF;
    color:#1D9DFF;
    border-radius: 10rpx;
    margin-right:20rpx;
    padding:0rpx 5rpx;
    font-size:24rpx;
} 

.board-info-priceOrSales {
    height:68rpx;
    line-height:68rpx;

}
.board-info-price {
    color:#F7442C;
    font-size:45rpx;
}

.board-info-price text {
   font-size:32rpx;
}

.board-info-sales {
    color:#A0A0A0;
    font-size:30rpx;
    margin-left:20rpx;
}