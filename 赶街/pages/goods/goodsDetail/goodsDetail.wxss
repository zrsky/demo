/* 商品详情 */
.goodsDetail-main {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.goodsDetail-swiper {
}

swiper {
  height:700rpx;
}

.slide-image {
  width:100%;
  height:754rpx;
}

.goodsDetail-content {
  height:250rpx;
  padding:0 20rpx;
  display:flex;
  flex-direction: column;
}

.goodsDetails-parse {
  display:flex;
  flex-direction:column;
  font-size:30rpx;
  line-height:45rpx;
  box-sizing:border-box;
  justify-content:flex-start;
  margin-bottom:100rpx;
}

.goods-price {
  color:#F7442C;
  font-size:48rpx;
  height:70rpx;
  line-height: 70rpx;
}

.goods-price text {
   font-size:32rpx;
}

.goods-name {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 32rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  color:#333333;
}

.goods-sellPointer {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  font-size:28rpx;
  color:#666666;
}

.goods-sale {
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top:30rpx;
  color:#999999;
  font-size:26rpx;
  position:relative;
}

.share-btn {
  position:absolute;
  right:0;
  top:0;
  height:50rpx;
  opacity:0;
  margin:0;
  padding:0;
}

.goods-sale image{
  width:44rpx;
  height:44rpx;
}

.goods-back {
  width:100%;
  height:20rpx;
  background-color:#F2F5F7;
  margin-top:20rpx;
}

.goods-sku {
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  color:#333333;
  padding:30rpx 20rpx;
  font-size:28rpx;
  align-items:center;
}

.goods-sku-arrow {
  width:30rpx;
  height:30rpx;
}

.goods-sku text:nth-child(2){
  color:#CCCCCC;
}

.goodsDetail-bottom {
  display:flex;
  flex-direction: row;
  width:100%;
  height:100rpx;
  position:fixed;
  left:0;
  bottom:0;
  justify-content: flex-start;
}

.goodsDetail-bottom-cont{
  border-top:1rpx solid #E3E3E3;
  background-color:#fff;
  display:flex;
  flex-direction: column;
  font-size:18rpx;
  justify-content: center;
  align-items: center;
}

.goodsDetail-bottom-cont text{
  margin-top:8rpx;
}

.goodsDetail-bottom-cont image{
  width:36rpx;
  height:36rpx;
}
.goodsDetail-bottom-buy{
  border-top:1rpx solid #1D9DFF;
  background-color:#1D9DFF;
  text-align: center;
  line-height:100rpx;
  color:#fff;
  font-size:34rpx;
  background:linear-gradient(to right,#15AAFF,#0088F1);
}

.personal{
  width:20%; 
}

.personal-buy{
  width:80%;
}

.wx {
  width:20%; 
}

.wx-buy {
  width:60%; 
}

.app {
  width:20%; 
}

.app-buy {
  width:40%; 
}

.mask-modal {
  background-color:black;
  opacity: .5;
  width:100%;
  height:100%;
  position:fixed;
}

.sku-modal {
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  background-color:#fff;
  display:flex;
  flex-direction: column;
}

.sku-modal-info {
  width:100%;
  display:flex;
  flex-direction: row;
  height:200rpx;
  padding:20rpx 0;
}

.sku-modal-info-img {
  height:200rpx;
  width:200rpx;
}

.sku-modal-info-img image{
  width:200rpx;
  height:200rpx;
}

.sku-modal-info-text {
  display:flex;
  flex-direction: column;
  height:150rpx;
  margin:40rpx 0 0 20rpx;
}

.sku-modal-info-text text {
  height:50rpx;
  line-height: 50rpx;
  font-size:24rpx;
  color:#333333;
}

.sku-modal-info-text text:nth-child(1) {
  height:60rpx;
  color:#F7442C;
  font-size:36rpx;
  line-height: 60rpx;
} 

.sku-modal-info-text text:nth-child(1) text {
  font-size:28rpx;
} 

.sku-modal-name {
  display:flex;
  flex-direction: row;
  font-size:24rpx;
  color:#333333;
}

.sku-category {
  border-top:1rpx solid #E3E3E3;
}

.sku-modal-category {
  display:flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding:0 2%;
}

.sku-modal-category-name {
  padding:0 20rpx;
  margin:20rpx 0;
  font-size:24rpx;
  color:#333333;

}

.sku-modal-category text {
  margin:20rpx 20rpx;
  min-width:26%;
  text-align:center;
  border-radius: 28rpx;
  font-size:24rpx;
  height:56rpx;
  line-height: 56rpx;
  padding:3rpx 5rpx;
  background-color:#F5F5F5;
}

.sku-btn {
  background-color:blue!important;
  color:#fff;
}

.confirmOrder-num {
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  margin:20rpx 0 50rpx 0;
  padding:0 2%;
}

.confirmOrder-num text{
  font-size:24rpx;
}

.confirmOrder-num-cale {
  display:flex;
  flex-direction: row;
  width:200rpx;
}
.confirmOrder-num-cale button {
  width:40rpx;
  height:45rpx;
  line-height: 45rpx;
  text-align: center;
  padding:0;
}

.confirmOrder-num-cale input {
  width:80rpx;
  height:40rpx;
  font-size:32rpx;
  border:1px solid #C3C3C3;
  min-height:00rpx;
  text-align:center;
}

.goodsDetail-submit {
  width:100%;
  height:100rpx;
  background-color:#1D9DFF;
  text-align: center;
  color:#fff;
  line-height:100rpx;
  background:linear-gradient(to right,#15AAFF,#0088F1);
}

.goodsDetails-details {
  height:130rpx;
  text-align: center;
  line-height: 130rpx;
  font-size:36rpx;
}